pipeline {
    agent any

    stages {
        stage('Instalar Python') {
            steps {
                sh '''
                   apk add --no-cache python3 py3-pip
                   python3 --version
                   pip3 --version
                '''
            }
        }

        stage('Clonar Repositorio') {
            steps {
                git url: 'https://github.com/Melvin3107/pruebasunitarias.git', branch: 'master' // Cambia 'master' a 'main' si tu rama es 'main'
            }
        }

        stage('Crear Entorno Virtual') {
            steps {
                sh 'python3 -m venv venv'
            }
        }

        stage('Activar Entorno Virtual y Instalar Dependencias') {
            steps {
                sh '''
                   source venv/bin/activate
                   pip install -r requirements.txt
                '''
            }
        }

        stage('Ejecutar Pruebas') {
            steps {
                sh '''
                   source venv/bin/activate
                   python run_tests.py
                '''
            }
        }
    }

    post {
        success {
            echo 'Las pruebas se ejecutaron correctamente.'
        }
        failure {
            echo 'Una o m√°s pruebas fallaron.'
        }
    }
}
